setup_c_linux_386   = $(setupgui_dir)/linux386/setup.exe
setup_c_nt_x64      = $(setupgui_dir)/ntx64.gui/csetup.exe
setup_c_linux_x64   = $(setupgui_dir)/linuxx64/setup.exe
