path_wlink = $(src_dir)\wl\nt386.dll
!else ifdef __NTX64__
path_rtdll = $(src_dir)\clib\rtdll\winnt.386\mf_r;$(src_dir)\clib\rtdll\winnt.386\mf_s;&
$(src_dir)\cpplib\rtdll\winnt.386\mf_r;$(src_dir)\cpplib\rtdll\winnt.386\mf_s;&
$(src_dir)\mathlib\rtdll\winnt.386\mf_r;$(src_dir)\mathlib\rtdll\winnt.386\mf_s;&
$(src_dir)\mathlib\rtdll\winnt.387\mf_r;$(src_dir)\mathlib\rtdll\winnt.387\mf_s
