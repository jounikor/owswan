################################################################################################################
#
# Setup OW test environment
#

#
# configuration flags (default: flag symbol not defined)
#
# no_continue = yes     -- continue in the face of errors
# use_dll = yes         -- use !loaddll

#
# configuration values:
#
# targ_env_386 = wnt386/d4g386/cw386/os2386/linux386 (depends on current OS)
# targ_env_i86 = os2i86/dosi86/wnti86 (depends on current OS)
# targ_env_axp = ntaxp (depends on current OS)
# targ_env_ppc = linuxppc/ntppc (depends on current OS)
# targ_env_mps = linuxmips (depends on current OS)
#
# nb: above directories can have extensions:
#   .    - Intel 386 hosted compiler
#   .axp - Digital AXP hosted compiler
#   ( more to be defined )
#
# was_386 = wasm
# was_i86 = wasm
# was_axp = wasmaxp
# was_ppc = wasmppc
# was_mps = wasmmps
#
# wcc_386 = wcc386
# wcc_i86 = wcc
# wcc_axp = wccaxp
# wcc_ppc = wccppc
# wcc_mps = wccmps
#
# wcc_dll_386 = wcc386.dll
# wcc_dll_i86 = wcc.dll
# wcc_dll_axp = wccaxp.dll
# wcc_dll_ppc = wccppc.dll
# wcc_dll_mps = wccmps.dll
#
# wpp_386 = wpp386
# wpp_i86 = wpp
# wpp_axp = wppaxp
# wpp_ppc = wppppc
# wpp_mps = wppmps
#
# wpp_dll_i86 = wppdi86.dll
# wpp_dll_386 = wppd386.dll
# wpp_dll_axp = wppdaxp.dll
# wpp_dll_ppc = wppdppc.dll
# wpp_dll_mps = wppdmps.dll
#
# wfc_386 = wfc386
# wfc_i86 = wfc
# wfc_axp = wfcaxp
#
# wfc_dll_i86 = wfcdi86.dll
# wfc_dll_386 = wfcd386.dll
# wfc_dll_axp = wfcdaxp.dll
#
# arch = 386/axp/ppc/mps (depends on current hardware)
#
# linker = wlink
#
# uncomment below if you want to see more
# !define noisy 1
#

watcom_root = $+$(%WATCOM)$-

failures_log = failures.log

!ifdef %BUILDTEST
buildtest = 1
!endif

!ifdef buildtest
buildtest_prefix = b
old_path=$+$(%PATH)$-
!ifdef __OS2__
old_os2_dll_path=$+$(%BEGINLIBPATH)$-
path_rtdll = $(src_dir)\clib\rtdll\os2.386\mf_r;$(src_dir)\clib\rtdll\os2.386\mf_s;&
$(src_dir)\cpplib\rtdll\os2.386\mf_r;$(src_dir)\cpplib\rtdll\os2.386\mf_s;&
$(src_dir)\mathlib\rtdll\os2.386\mf_r;$(src_dir)\mathlib\rtdll\os2.386\mf_s;&
$(src_dir)\mathlib\rtdll\os2.387\mf_r;$(src_dir)\mathlib\rtdll\os2.387\mf_s
path_wcc = $(src_dir)\cc\386\os2386.dll\$(%OWOBJDIR);$(src_dir)\cc\i86\os2386.dll\$(%OWOBJDIR)
path_wpp = $(src_dir)\plusplus\386\os2386.dll;$(src_dir)\plusplus\i86\os2386.dll
#path_wfc = $(src_dir)\f77\wfc\386\os2386.dll;$(src_dir)\f77\wfc\i86\os2386.dll
path_wlib = $(src_dir)\nwlib\os2386.dll
path_wlink = $(src_dir)\wl\os2386.dll
os2_dll_path=$(path_wcc);$(path_wpp);$(path_wlib);$(path_wlink);
!else ifdef __NTAXP__
path_rtdll = $(src_dir)\clib\rtdll\winnt.axp\mf_r;$(src_dir)\clib\rtdll\winnt.axp\mf_s;&
$(src_dir)\cpplib\rtdll\winnt.axp\mf_r;$(src_dir)\cpplib\rtdll\winnt.axp\mf_s;&
$(src_dir)\mathlib\rtdll\winnt.axp\mf_r;$(src_dir)\mathlib\rtdll\winnt.axp\mf_s
path_wcc = $(src_dir)\cc\axp\ntaxp.dll\$(%OWOBJDIR)
path_wpp = $(src_dir)\plusplus\axp\ntaxp.dll
#path_wfc = $(src_dir)\f77\wfc\axp\ntaxp.dll
path_wlib = $(src_dir)\nwlib\ntaxp.dll
path_wlink = $(src_dir)\wl\ntaxp.dll
!else ifdef __NT386__
path_rtdll = $(src_dir)\clib\rtdll\winnt.386\mf_r;$(src_dir)\clib\rtdll\winnt.386\mf_s;&
$(src_dir)\cpplib\rtdll\winnt.386\mf_r;$(src_dir)\cpplib\rtdll\winnt.386\mf_s;&
$(src_dir)\mathlib\rtdll\winnt.386\mf_r;$(src_dir)\mathlib\rtdll\winnt.386\mf_s;&
$(src_dir)\mathlib\rtdll\winnt.387\mf_r;$(src_dir)\mathlib\rtdll\winnt.387\mf_s
path_wcc = $(src_dir)\cc\386\nt386.dll\$(%OWOBJDIR);$(src_dir)\cc\i86\nt386.dll\$(%OWOBJDIR)
path_wpp = $(src_dir)\plusplus\386\nt386.dll;$(src_dir)\plusplus\i86\nt386.dll
#path_wfc = $(src_dir)\f77\wfc\386\nt386.dll;$(src_dir)\f77\wfc\i86\nt386.dll
