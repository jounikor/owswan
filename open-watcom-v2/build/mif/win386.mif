!ifeq host_os win
!ifeq host_cpu 386
!define win386
!endif
!endif

!ifdef win386
lname = $^&.rex
win386ldr = $(win386_dir)/ext/win386.ext
additional_clean_sys = *.rex
!else
lname = $@
!endif

!ifeq verbose 0
wbind_quiet = -q
!endif

bind_win386_add_res : .PROCEDURE .EXPLICIT
!ifdef win386
!ifeq verbose 0
    @echo wbind $(win386ldr) $@
!endif
    $(wbind) $(lname) $(wbind_quiet) -s $(win386ldr) -R $(wbind_quiet) -k $^&.res $@
!endif
