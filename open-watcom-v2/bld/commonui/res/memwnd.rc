              "&Display" )
    BEGIN
        MENUITEM sp( "&Bytes",
                     "&Bytes" ), MEMINFO_BYTE
        MENUITEM sp( "&Words",
                     "&Words" ), MEMINFO_WORD
        MENUITEM sp( "&DWords",
                     "&DWords" ), MEMINFO_DWORD
#ifndef __NT__
        MENUITEM SEPARATOR
        MENUITEM sp( "&16 Bit Code",
                     "&16 Bit Code" ), MEMINFO_CODE_16
        MENUITEM sp( "&32 Bit Code",
                     "&32 Bit Code" ), MEMINFO_CODE_32
#endif
