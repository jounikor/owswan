IMAGESIZE DIALOG 96, 60, 260, 78
STYLE DS_MODALFRAME | WS_POPUP | WS_VISIBLE | WS_CAPTION | WS_SYSMENU
CAPTION "Change Image Size"
FONT 8, "MS Sans Serif"
BEGIN
    EDITTEXT        SIZE_WIDTH, 50, 21, 40, 12, ES_AUTOHSCROLL | WS_GROUP
    EDITTEXT        SIZE_HEIGHT, 50, 35, 40, 12, ES_AUTOHSCROLL
    CONTROL         "Stretch to new dimensions.", SIZE_STRETCH, "Button",
                    BS_AUTORADIOBUTTON | WS_GROUP | WS_TABSTOP, 144, 22, 100,
                    10
    CONTROL         "Clip into new dimensions.", SIZE_CLIP, "Button",
                    BS_AUTORADIOBUTTON | WS_TABSTOP, 144, 35, 95, 10
    DEFPUSHBUTTON   "&OK", IDOK, 54, 58, 40, 14, WS_GROUP
    PUSHBUTTON      "&Cancel", IDCANCEL, 110, 58, 40, 14
    PUSHBUTTON      "&Help", IDB_HELP, 166, 58, 40, 14
    GROUPBOX        "New Image Size", -1, 7, 6, 115, 46, WS_GROUP
    RTEXT           "Width:", -1, 24, 24, 23, 8, NOT WS_GROUP
    RTEXT           "Height:", -1, 22, 38, 25, 8, NOT WS_GROUP
    GROUPBOX        "New Image", -1, 138, 6, 115, 46
END
