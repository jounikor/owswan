SELECTIMAGE DIALOG 110, 60, 160, 81
STYLE DS_MODALFRAME | WS_POPUP | WS_CAPTION | WS_SYSMENU
CAPTION "Image Type"
FONT 8, "MS Sans Serif"
BEGIN
    LTEXT           "Select the type of image to create...", -1, 15, 9, 120,
                    12
    CONTROL         "&Bitmap", SEL_BITMAP, "Button", BS_AUTORADIOBUTTON |
                    WS_GROUP | WS_TABSTOP, 50, 23, 39, 10
    CONTROL         "&Icon", SEL_ICON, "Button", BS_AUTORADIOBUTTON |
                    WS_TABSTOP, 50, 35, 39, 10
    CONTROL         "&Cursor", SEL_CURSOR, "Button", BS_AUTORADIOBUTTON |
                    WS_TABSTOP, 50, 47, 39, 10
    DEFPUSHBUTTON   "&OK", IDOK, 10, 61, 40, 14, WS_GROUP
    PUSHBUTTON      "Cancel", IDCANCEL, 60, 61, 40, 14
    PUSHBUTTON      "&Help", IDB_HELP, 110, 61, 40, 14
END

ICONTYPE DIALOG 90, 48, 170, 140
STYLE DS_MODALFRAME | WS_POPUPWINDOW | WS_VISIBLE | WS_DLGFRAME
CAPTION "Icon Target"
FONT 8, "MS Sans Serif"
BEGIN
        CONTROL "",        TARGETLISTBOX, "LISTBOX", LBS_NOTIFY | WS_CHILD | WS_VISIBLE | WS_BORDER | WS_VSCROLL | WS_GROUP | WS_TABSTOP, 6, 16, 157, 110
        CONTROL "&OK",     IDOK, "BUTTON", BS_DEFPUSHBUTTON | WS_CHILD | WS_VISIBLE | WS_GROUP | WS_TABSTOP, 6, 120, 50, 14
        CONTROL "&Cancel", IDCANCEL, "BUTTON", BS_PUSHBUTTON | WS_CHILD | WS_VISIBLE | WS_TABSTOP, 60, 120, 50, 14
        CONTROL "&Help",   IDB_HELP, "BUTTON", BS_PUSHBUTTON | WS_CHILD | WS_VISIBLE | WS_TABSTOP, 114, 120, 50, 14
        CONTROL "",        DIALOGTEXT, "STATIC", SS_LEFT | WS_CHILD | WS_VISIBLE | WS_GROUP, 6, 6, 140, 8
END

BITMAPTYPE DIALOG 110, 60, 234, 100
STYLE DS_MODALFRAME | WS_POPUP | WS_VISIBLE | WS_CAPTION | WS_SYSMENU
CAPTION "Bitmap Information"
FONT 8, "MS Sans Serif"
BEGIN
    GROUPBOX        "Dimensions",   -1,  27, 6, 75, 66, WS_GROUP
    RTEXT           "&Width:", -1, 29, 22, 28, 8
    RTEXT           "&Height:", -1, 29, 35, 26, 8
    EDITTEXT        BMP_WIDTH, 59, 20, 32, 12, ES_AUTOHSCROLL
    EDITTEXT        BMP_HEIGHT, 59, 33, 32, 12, ES_AUTOHSCROLL
    PUSHBUTTON      "&Screen Select", SEL_SELECT, 36, 50, 55, 14
    GROUPBOX        "Color Scheme", -1, 118, 6, 94, 66, WS_GROUP
    CONTROL         "&True Color", BMP_TRUECOLOR, "Button", BS_AUTORADIOBUTTON | WS_TABSTOP, 127, 19, 60, 10
    CONTROL         "256 &Color", BMP_256COLOR, "Button", BS_AUTORADIOBUTTON | WS_TABSTOP, 127, 32, 60, 10
    CONTROL         "16 C&olor", BMP_16COLOR, "Button", BS_AUTORADIOBUTTON | WS_TABSTOP, 127, 45, 60, 10
    CONTROL         "2 Color &Monochrome", BMP_2COLOR, "Button", BS_AUTORADIOBUTTON | WS_TABSTOP, 127, 58, 81, 10
    DEFPUSHBUTTON   "&OK", IDOK, 41, 80, 50, 14, WS_GROUP
    PUSHBUTTON      "C&ancel", IDCANCEL, 97, 80, 50, 14
    PUSHBUTTON      "&Help", IDB_HELP, 153, 80, 50, 14
END

