DLGTEMPLATE BITMAPTYPE LOADONCALL MOVEABLE DISCARDABLE
BEGIN
    DIALOG "Bitmap Information", BITMAPTYPE, 110, 88, 234, 82, FS_SYSMODAL |
                 WS_VISIBLE, FCF_SYSMODAL | FCF_TITLEBAR | FCF_SYSMENU
    PRESPARAMS PP_FONTNAMESIZE, "8.Helv"
    BEGIN
        EDITTEXT        "", BMP_WIDTH, 59, 50, 32, 12, ES_AUTOSCROLL
                 | WS_GROUP | DT_MNEMONIC | WS_VISIBLE
        EDITTEXT        "", BMP_HEIGHT, 59, 37, 32, 12, ES_AUTOSCROLL
                 | DT_MNEMONIC | WS_VISIBLE
        CONTROL         "16 ~Colour", BMP_16COLOR, 127, 50, 48, 10, WC_BUTTON
                 , BS_AUTORADIOBUTTON | WS_GROUP | WS_TABSTOP | WS_VISIBLE
        CONTROL         "2 Colour ~Monochrome", BMP_2COLOR, 127, 37, 81, 10, WC_BUTTON
                 , BS_AUTORADIOBUTTON | WS_TABSTOP | WS_VISIBLE
        RTEXT           "~Width:", -1, 29, 52, 28, 8, DT_MNEMONIC
        RTEXT           "~Height:", -1, 29, 39, 26, 8, NOT
                 WS_GROUP | DT_MNEMONIC
        GROUPBOX        "Dimensions", -1, 27, 29, 75, 47, WS_GROUP | WS_VISIBLE
        GROUPBOX        "Colour Scheme", -1, 118, 29, 94, 47
        DEFPUSHBUTTON   "~OK", DID_OK, 16, 6, 40, 14, WS_GROUP
        PUSHBUTTON      "~Select", SEL_SELECT, 70, 6, 40, 14
        PUSHBUTTON      "C~ancel", DID_CANCEL, 124, 6, 40, 14
        PUSHBUTTON      "~Help", DID_HELP_BUTTON, 178, 6, 40, 14
    END
END

