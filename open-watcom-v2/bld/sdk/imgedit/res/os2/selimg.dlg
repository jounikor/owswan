DLGTEMPLATE SELECTIMAGE LOADONCALL MOVEABLE DISCARDABLE
BEGIN
    DIALOG "Image Type", SELECTIMAGE, 110, 89, 160, 81, FS_SYSMODAL |
                 WS_VISIBLE, FCF_SYSMODAL | FCF_TITLEBAR | FCF_SYSMENU
    PRESPARAMS PP_FONTNAMESIZE, "8.Helv"
    BEGIN
        LTEXT           "Select the type of image to create...", -1, 15, 60, 120, 12, DT_MNEMONIC
        CONTROL         "~Bitmap", SEL_BITMAP, 50, 48, 39, 10, WC_BUTTON
                 , BS_AUTORADIOBUTTON | WS_GROUP | WS_TABSTOP | WS_VISIBLE
        CONTROL         "~Icon", SEL_ICON, 50, 36, 39, 10, WC_BUTTON
                 , BS_AUTORADIOBUTTON | WS_TABSTOP | WS_VISIBLE
        CONTROL         "~Cursor", SEL_CURSOR, 50, 24, 39, 10, WC_BUTTON
                 , BS_AUTORADIOBUTTON | WS_TABSTOP | WS_VISIBLE
        DEFPUSHBUTTON   "~OK", DID_OK, 10, 6, 40, 14, WS_GROUP
        PUSHBUTTON      "Cancel", DID_CANCEL, 60, 6, 40, 14
        PUSHBUTTON      "~Help", DID_HELP_BUTTON, 110, 6, 40, 14
    END
END

