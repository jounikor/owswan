DLGTEMPLATE IMAGESIZE LOADONCALL MOVEABLE DISCARDABLE
BEGIN
    DIALOG "Change Image Size", IMAGESIZE, 96, 92, 260, 78, FCF_SYSMODAL
                 | WS_VISIBLE | FCF_TITLEBAR | FCF_SYSMENU
    PRESPARAMS PP_FONTNAMESIZE, "8.Helv"
    BEGIN
        EDITTEXT        "", SIZE_WIDTH, 50, 45, 40, 12, ES_AUTOSCROLL
                 | WS_GROUP | DT_MNEMONIC | WS_VISIBLE
        EDITTEXT        "", SIZE_HEIGHT, 50, 31, 40, 12, ES_AUTOSCROLL
                 | DT_MNEMONIC | WS_VISIBLE
        CONTROL         "Stretch to new dimensions.", SIZE_STRETCH, 144, 46, 100, 10, WC_BUTTON
                 , BS_AUTORADIOBUTTON | WS_GROUP | WS_TABSTOP | WS_VISIBLE
        CONTROL         "Clip into new dimensions.", SIZE_CLIP, 144, 33, 95, 10, WC_BUTTON
                 , BS_AUTORADIOBUTTON | WS_TABSTOP | WS_VISIBLE
        DEFPUSHBUTTON   "~OK", DID_OK, 54, 6, 40, 14, WS_GROUP
        PUSHBUTTON      "~Cancel", DID_CANCEL, 110, 6, 40, 14
        PUSHBUTTON      "~Help", DID_HELP_BUTTON, 166, 6, 40, 14
        GROUPBOX        "New Image Size", -1, 7, 26, 115, 46, WS_GROUP | WS_VISIBLE
        RTEXT           "Width:", -1, 24, 46, 23, 8, NOT
                 WS_GROUP | DT_MNEMONIC | WS_VISIBLE
        RTEXT           "Height:", -1, 22, 32, 25, 8, NOT
                 WS_GROUP | DT_MNEMONIC | WS_VISIBLE
        GROUPBOX        "New Image", -1, 138, 26, 115, 46, WS_VISIBLE
    END
END
