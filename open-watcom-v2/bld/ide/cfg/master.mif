proj_name = idecfg

!ifeq host_cpu x64
!ifneq bld_cpu x64
skip_build: .symbolic
!else ifndef bld64host_$(host_os)
skip_build: .symbolic
!endif
!endif

!include cproj.mif

objs = &
    ide.cfg      &
    idex.cfg     &
    idedos.cfg   &
    idedos32.cfg &
    idewin.cfg   &
    ideos2.cfg   &
    ideos232.cfg &
    idew32.cfg   &
    idew386.cfg  &
    idenlm.cfg   &
    ideaxp.cfg   &
    idelnx.cfg   &
    iderdos.cfg

.extensions : .cfg .sp

.sp : ..

all: $(objs) .symbolic

wsplice_opts_linux = -k FOR_LINUX
wsplice_opts_nt    = -k FOR_NT
wsplice_opts_os2   = -k FOR_OS2
wsplice_opts_win   = -k FOR_WIN

wsplice_opts_axp   = -k FOR_AXP
wsplice_opts_x64   = -k FOR_X64

.sp.cfg:
    @%make echo_wsplice
    $(wsplice) $(wsplice_opts_$(host_os)) $(wsplice_opts_$(host_cpu)) $[@ $@

clean : .symbolic
    rm -f *.cfg
